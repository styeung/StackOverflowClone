<form action="<%= questions_url %>" method="POST">
	<%= auth_token %>
	
	<label>
		Title
		<input type="text" name="question[question_name]" value="<%= @question.question_name %>" placeholder="What's your question? Be specific.">
	</label>
	<br>
	<label>
		Body
		<textarea name="question[question_body]" value="<%= @question.question_body %>"></textarea>
	</label>
	<br>
	
	<button>Post Your Question</button>
</form>